<script>
     $(document).ready(function () {
    $.ajax({
    type: 'get',
    dataType: 'json',
    url: '@Url.Action("AccountList", "Account")',
    success: function (data) {
    var s = '<option value="0">--Choose Organisation--</option>';
    $("#org").empty();
    for (var i = 0; i < data.length; i++) {
    s += '<option value="' + data[i].accountName + '">' + data[i].accountName + '</option>';
    }
        $("#org").append(s);
        console.log(s);
    }
    });
          document.getElementById("overlay").style.display = "none";
     });


    function getProject() {
        var orgName = $('#org').val();
        if (orgName == 0) {
        document.getElementById("submit").disabled = true;

            return;
        }
        $.ajax({
            type: 'get',
            data: { orgName } ,

            url: '@Url.Action("GetProjects", "Account")',
            success: function (data) {
                console.log(data);
                var s = '<option value="0">--Choose Project--</option>';
                $("#proj").empty();
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].name + '">' + data[i].name + '</option>';
                }
                $("#proj").append(s);
            }
        });
    }
    function check() {
        console.log($('input[name$="Excel"]').val());
        var a = $('input[name$="Excel"]').val();
            var b = $('input[name$="Zip"]').val();
            if (a != '') {
                var x = a.split('\\');
                console.log(x);
                $('#ex').html(x[2]);
            }
            if (b!= '') {
                var x = b.split('\\');
                console.log(x);
                $('#zp').html(x[2]);
            }
        if (($('input[name$="Excel"]').val() == '') || ($('input[name$="Zip"]').val() == '') || ($('#org').val() == 0) || ($('#proj').val() == 0)) {
        document.getElementById("submit").disabled = true;

            return;
        }
        document.getElementById("submit").disabled = false;
    }
    function load() {
          document.getElementById("overlay").style.display = "block";

        var appBanners =  document.getElementsByClassName("load");

for (var i = 0; i < appBanners.length; i ++) {
    appBanners[i].style.display = 'block';
}
    }

</script>
<div id="overlay"></div>

    <img style="margin-left: 42%; margin-top: 5%;display:none;" height="100" width="100" class="load" src="~/Content/Images/loadinggif.gif" />
    <br />
    <p style="margin-left: 42%; margin-top: 5%;display:none;" class="load">Migrating Please be Patient.</p>

<div class="ml-4 mt-3">
    @using (Html.BeginForm("Index", "Migration", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.Label("Organization", htmlAttributes: new { @class = "control-label  sizeNormal", style = "padding-right:35px" })

        @Html.DropDownList("Org", new SelectList(new[] { "Empty List" }), htmlAttributes: new { @class = "form-control borderRadius width", id = "org", name = "Org", style = "opacity:0.8", onchange = "getProject()" })

        @Html.Label("Project", htmlAttributes: new { @class = "control-label sizeNormal", style = "padding-right:35px" })

        @Html.DropDownList("Proj", new SelectList(new[] { "Empty List" }), htmlAttributes: new { @class = "form-control borderRadius width", id = "proj", name = "Proj", style = "opacity:0.8", onchange = "check()" })
        <br />
        <label id="ex" class="btn btn-success" for="Excel">Choose Excel</label>
        <br />
        <input id="Excel" type="file" name="Excel" data-max-size="32154" accept=".xls,.xlsx" style="display:none" onchange="check()" />
        <br />
        <br />

        <label id="zp" class="btn btn-danger" for="Zip">Choose Attatchment</label>
        <br />

        <input id="Zip" type="file" name="Zip" data-max-size="32154" accept=".zip,.rar" style="display:none" onchange="check()" />
        <br />
        <br />
        <div>
            <button id="submit" class="btn btn-dark" onclick="load()" disabled>Submit</button>
        </div>


    }
</div>
